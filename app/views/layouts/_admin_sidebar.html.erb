<section class="sidebar">
  <!-- Sidebar user panel -->
  <div class="user-panel">
    <div class="pull-left image">
      <%= image_tag current_user.avatar.url(:thumb), class: 'img-circle' %>
    </div>
    <div class="pull-left info">
      <%= current_user.email %>

      <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
    </div>
  </div>
  <!-- search form -->
  <form action="/search" method="get" class="sidebar-form">
    <div class="input-group">
      <input type="text" name="search" id="search" placeholder="Пошук">
      <span class="input-group-btn">
        <button type='submit' id='form-search-button' class="btn btn-flat"><i class="fa fa-search"></i></button>
      </span>
    </div>
  </form>
  <!-- /.search form -->
  <!-- sidebar menu: : style can be found in sidebar.less -->
  <ul class="sidebar-menu">
    <%= nav_link root_path do %>
        <i class="fa fa-dashboard"></i> <span>Головна</span>
    <% end %>
    <%= nav_link '/admins' do %>
        <i class="fa fa-angle-double-right"></i>
        Список адміністраторів
    <% end %>
    <%= nav_link '/admins/new' do %>
        <i class="fa fa-angle-double-right"></i>
        Додати адміністратора
    <% end %>
    <%= nav_link '/initiatives' do %>
        <i class="fa fa-angle-double-right"></i>
        Список ініціатив
    <% end %>
    <%= nav_link '/initiatives/pending_approval' do %>
        <i class="fa fa-angle-double-right"></i>
        Непідтверджені ініціативи
    <% end %>
    <%= nav_link '/initiatives/fundraising_finished' do %>
        <i class="fa fa-angle-double-right"></i>
        Завершили збір коштів
    <% end %>
    <%= nav_link '/categories' do %>
        <i class="fa fa-angle-double-right"></i>
        Список категорій
    <% end %>
    <%= nav_link '/categories/new' do %>
        <i class="fa fa-angle-double-right"></i>
        Додати категорію
    <% end %>
  </ul>
</section>