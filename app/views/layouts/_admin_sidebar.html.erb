<section class="sidebar">
  <!-- Sidebar user panel -->
  <div class="user-panel">
    <div class="pull-left image">
      <%= image_tag current_user.avatar.url(:thumb), class: 'img-circle' %>
    </div>
    <div class="pull-left info">
      <%= current_user.email %>

      <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
    </div>
  </div>
  <!-- search form -->
  <form action="#" method="get" class="sidebar-form">
    <div class="input-group">
      <input type="text" name="q" class="form-control" placeholder="Search..."/>
      <span class="input-group-btn">
        <button type='submit' name='search' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
      </span>
    </div>
  </form>
  <!-- /.search form -->
  <!-- sidebar menu: : style can be found in sidebar.less -->
  <ul class="sidebar-menu">
    <%= nav_link root_path do %>
        <i class="fa fa-dashboard"></i> <span>Головна</span>
    <% end %>
    <%= treeview_link 'Адмін' do %>
        <%= nav_link '/admins' do %>
            <i class="fa fa-angle-double-right"></i>
            Список адміністраторів
        <% end %>
        <%= nav_link '/admins/new' do %>
            <i class="fa fa-angle-double-right"></i>
            Додати адміністратора
        <% end %>
    <% end %>
    <%= treeview_link 'Ініціативи' do %>
        <%= nav_link '/initiatives' do %>
            <i class="fa fa-angle-double-right"></i>
            Список ініціатив
        <% end %>
        <%= nav_link '/initiatives/new' do %>
            <i class="fa fa-angle-double-right"></i>
            Додати ініціативу
        <% end %>
    <% end %>
    <%= treeview_link 'Категорії' do %>
        <%= nav_link '/categories' do %>
            <i class="fa fa-angle-double-right"></i>
            Список категорій
        <% end %>
        <%= nav_link '/categories/new' do %>
            <i class="fa fa-angle-double-right"></i>
            Додати категорію
        <% end %>
    <% end %>
  </ul>
</section>