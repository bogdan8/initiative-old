.container
  .row
    .col-lg-12
      h2
        = "#{t('views.admins.index.title')}:"
      br
      - @admins.each do |items|
        h4
          = "#{t('views.form.email')} : #{items.email}"

        p
          = link_to t('views.link_to.show'), admin_path(items), class: 'btn btn-default'

          = link_to t('views.link_to.edit'), edit_admin_path(items), class: 'btn btn-warning'

          = link_to t('views.link_to.delete'), admin_path(items), method: :delete, class: 'btn btn-danger', data: {confirm: 'Ви впевнені?'}
