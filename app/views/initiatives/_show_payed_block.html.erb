<div class="row">
  <div class="col-lg-12">
    <div class="block-pay">
      <form class="form-horizontal">
        <div class="radio">

          <label class="radio-inline">
            <input type="radio" name="inlineRadioOptions" id="paypal" value="paypal">
            <%= image_tag 'initiatives/PayPal.png', class: 'img-paypal' %>
          </label>
          <label class="radio-inline">
            <input type="radio" name="inlineRadioOptions" id="stripe" value="stripe">
            <%= image_tag 'initiatives/stripe.png', class: 'img-stripe' %>
          </label>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-lg-2">
              <label class="initiative-new-form-names">Сума:</label>
            </div>
            <div class="col-lg-4">
              <div class="input-group">
                <input type="text" class="form-control initiative-show-form-input" id="exampleInputAmount" placeholder="Сума">
              </div>
            </div>
            <div class="col-lg-4">
              <div class="show-many-value">
                <select name="" class="initiative-show-form-input">
                  <option value="1">Грн</option>
                  <option value="2">$</option>
                  <option value="3">&euro;</option>
                </select>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-12 col-sm-12 col-xs-12">
          <button class="initiative-button-support" type="submit">
            оплаптити
          </button>
        </div>
      </form>
    </div>
  </div>
</div>