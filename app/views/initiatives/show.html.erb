<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <div class="initiative-show-block">
        <div class="block-show-big-images">
          <%= image_tag @initiative.main_picture.url, class: 'show-big-images' %>
        </div>
        <div class="row">
          <div class="col-lg-3">
            <div class="block-show-small-images">
              <%= image_tag @initiative.main_picture.url, class: 'show-small-images' %>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="block-show-small-images">
              <%= image_tag @initiative.main_picture.url, class: 'show-small-images' %>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="block-show-small-images">
              <%= image_tag @initiative.main_picture.url, class: 'show-small-images' %>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="block-show-small-images">
              <%= image_tag @initiative.main_picture.url, class: 'show-small-images' %>
            </div>
          </div>
        </div>
        <diw class="row">
          <div class="col-lg-12">
            <p>
              <i class="fa fa-angle-down" aria-hidden="true"></i>
            </p>
          </div>
        </diw>
      </div>
    </div>
    <div class="col-lg-6">
      <p><%= @initiative.title %></p>

      <p class="initiative-long-description"><%= @initiative.long_description %></p>

      <p class="initiative-list-categories">Категорія:
        <%= show_initiative_categories @initiative %>
      </p>

      <div class="row">
        <div class="col-lg-12">
          <p class="initiative-need-sum"><%= t('views.initiative.show.need_sum') %>: <b><%= @initiative.sum %> грн</b></p>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <p class="initiative-collected"><%= t('views.initiative.show.collected') %>: <b><%= @initiative.sum %> грн</b></p>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <p class="initiative-remains"><%= t('views.initiative.show.remains') %>: <b><%= @initiative.sum %> грн</b></p>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <a href="#" class="initiative-button-support"><%= t('views.initiative.show.support') %></a>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <div class="initiative-show-video">
        <%== @initiative.main_video %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="initiative-show-share">
        <p><%= t('views.initiative.show.share') %>
          <b class="vk"><i class="fa fa-vk" aria-hidden="true"></i></b>
          <b class="facebook"><i class="fa fa-facebook" aria-hidden="true"></i></b>
          <b class="twitter"><i class="fa fa-twitter" aria-hidden="true"></i></b>
          <b class="google"><i class="fa fa-google-plus" aria-hidden="true"></i></b>
        </p>
      </div>
    </div>
  </div>
</div>
