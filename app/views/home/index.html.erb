<div class="container">
  <div class="row">
    <% @initiatives.each do |items| %>
        <div class="col-lg-4">
            <div class="initiative-list-block">
              <div class="block-list-images">
                <%= image_tag items.main_picture.url(:thumb), class: 'list-images' %>
              </div>
              <div class="block-list-initiative-description">
                <p class="initiative-list-title">
                  <%= items.title %>
                </p>
                <p class="initiative-list-short-description">
                  <%= items.short_description %>
                </p>
                <p class="initiative-list-days-left">
                  залишилося <b>10 днів</b>
                </p>
              </div>
            </div>
        </div>
    <% end %>
  </div>
  <div class="row">
    <div class="list-down-block">
      <i class="fa fa-sort-desc" aria-hidden="true"></i>
    </div>
  </div>
</div>
<%= paginate @initiatives %>