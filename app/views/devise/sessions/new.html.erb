<div class="container">
  <div class="row">
    <div class="col-lg-offset-1 col-lg-11 col-xs-12">
      <div class="row">
        <div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4 col-xs-12">
          <p class="user-panel-show-title">
            Війти
            <a href="/users/auth/twitter" class="btn login-twitter-btn">Ввійти
              <b><%= fa_icon 'twitter 2x' %></b>
            </a>
            <a href="/users/auth/facebook?display=popup" class="btn login-facebook-btn">Ввійти
              <b><%= fa_icon 'facebook-official 2x' %></b>
            </a>
          </p>
        </div>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.label 'Емайл' %><br/>
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.email_field :email, autofocus: true, class: 'form-control initiative-new-form-input' %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.label 'Пароль' %><br/>
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.password_field :password, autocomplete: 'off', class: 'form-control initiative-new-form-input' %>
              </p>
            </div>
          </div>
          <% if devise_mapping.rememberable? -%>
              <div class="row">
                <div class="col-lg-4 col-md-4 col-xs-12">
                  <p class="user-panel-show-names-user-information">
                    <%= f.check_box :remember_me %>
                    Запамятати мене
                  </p>
                </div>
              </div>
          <% end -%>
          <div class="col-lg-offset-4 col-md-8 col-xs-12">
            <p class="user-panel-show-names-user-information">
              <%= f.submit 'Війти', class: 'devise-registration-edit-button-submit' %>
              <%= spinner_css %>
            </p>
          </div>
      <% end %>
      <%= render 'devise/shared/links' %>

    </div>
  </div>
</div>
