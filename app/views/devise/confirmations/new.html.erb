<div class="container">
  <div class="row">
    <div class="row">
      <div class="col-lg-offset-1 col-lg-11 col-md-offset-1 col-md-12 col-xs-12">
        <p class="user-panel-show-title">
          Надіслати щераз інструкцію для підтвердження
        </p>
      </div>
    </div>
    <div class="col-lg-offset-1 col-lg-11 col-xs-12">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {method: :post}) do |f| %>
          <%= devise_error_messages_alert! %>

          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                Емайл*
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.email_field :email, required: :required, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control initiative-new-form-input' %>
              </p>
            </div>
          </div>

          <div class="col-lg-offset-4 col-md-8 col-xs-12">
            <%= f.submit 'Надіслати повторно', class: 'devise-registration-edit-button-submit' %>
            <%= spinner_css %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>