<h2>Зареєструватись</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label 'Імя' %><br/>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label 'Пошта' %><br/>
      <%= f.text_field :post %>
    </div>

    <div class="field">
      <%= f.label 'Телефон' %><br/>
      <%= f.number_field :phone %>
    </div>

    <div class="field">
      <%= f.label 'Фото' %>
      <%= f.file_field :avatar %>
    </div>

    <div class="field">
      <%= f.label 'Емайл' %><br/>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label 'Пароль' %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> символів мінімум)</em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label 'Повторити пароль' %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Зареєструватись" %>
    </div>
<% end %>

<%= render "devise/shared/links" %>
