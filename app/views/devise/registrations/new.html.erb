<div class="container">
  <div class="row">
    <div class="col-lg-offset-1 col-lg-11 col-xs-12">
      <div class="row">
        <div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4 col-xs-12">
          <p class="user-panel-show-title">
            Зареєструватись
          </p>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages_alert! %>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">Фото* </p>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
              <div class="devise-registration-edit-file-block">
                <div class="devise-registration-edit-file-title">Додати фото</div>

                <%= f.file_field :avatar, class: 'devise-registration-edit-file-input' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                Імя*
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.text_field :name, required: :required, class: 'form-control initiative-new-form-input' %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                Пошта*
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.text_field :post, required: :required, class: 'form-control initiative-new-form-input' %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                Телефон*
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.text_field :phone, required: :required, class: 'form-control initiative-new-form-input' %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                Емайл*
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.email_field :email, required: :required, autofocus: true, class: 'form-control initiative-new-form-input' %>
              </p>
            </div>
          </div>
          <% if f.object.password_required? %>
              <div class="row">
                <div class="col-lg-4 col-md-4 col-xs-12">
                  <p class="user-panel-show-names-user-information">
                    Пароль*
                    <% if @minimum_password_length %>
                        <em>(<%= @minimum_password_length %> символів мінімум)</em>
                    <% end %><br/>
                  </p>
                </div>
                <div class="col-lg-8 col-md-8 col-xs-12">
                  <p class="user-panel-show-names-user-information">
                    <%= f.password_field :password, required: :required, autocomplete: "off", class: 'form-control initiative-new-form-input' %>
                  </p>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-4 col-md-4 col-xs-12">
                  <p class="user-panel-show-names-user-information">
                    Повторити пароль*
                  </p>
                </div>
                <div class="col-lg-8 col-md-8 col-xs-12">
                  <p class="user-panel-show-names-user-information">

                    <%= f.password_field :password_confirmation, required: :required, autocomplete: "off", class: 'form-control initiative-new-form-input' %>
                  </p>
                </div>
              </div>
          <% end %>
          <div class="col-lg-offset-4 col-md-8 col-xs-12">
            <p class="user-panel-show-names-user-information">
              <%= recaptcha_tags %>
            </p>
          </div>
          <div class="col-lg-offset-4 col-md-8 col-xs-12">
            <%= f.submit 'Зареєструватись', class: 'devise-registration-edit-button-submit' %>
            <%= spinner_css %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>



