<div class="container">
  <div class="row">
    <div class="col-lg-offset-1 col-lg-11 col-xs-12">
      <div class="row">
        <div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4 col-xs-12">
          <p class="user-panel-show-title">
            <%= t('views.devise.registration.edit.title') %>
          </p>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
          <%= devise_error_messages_alert! %>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">Фото: </p>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
              <div class="devise-registration-edit-file-block">
                <div class="devise-registration-edit-file-title">Редагувати фото</div>
                <input type="file" name="user[avatar]" id="user_avatar" size="1" class="devise-registration-edit-file-input">

                <%= image_tag @user.avatar.url, class: 'devise-registration-edit-block-show-images' %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= t('views.devise.registration.edit.title') %>
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.text_field :name, class: 'form-control initiative-new-form-input' %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= t('views.devise.registration.edit.post') %>
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.text_field :post, class: 'form-control initiative-new-form-input' %>

              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= t('views.devise.registration.edit.phone') %>
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.number_field :phone, class: 'form-control initiative-new-form-input' %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= t('views.devise.registration.edit.email') %>
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.email_field :email, autofocus: true, class: 'form-control initiative-new-form-input' %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= t('views.devise.registration.edit.password') %>
                <i>(залиште порожнім, якщо ви не хочете, щоб змінити його)</i><br/>
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.password_field :password, class: 'form-control initiative-new-form-input', autocomplete: "off" %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= t('views.devise.registration.edit.repeat_password') %>
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.password_field :password_confirmation, class: 'form-control initiative-new-form-input', autocomplete: "off" %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= t('views.devise.registration.edit.current_password') %>
                <i>(нам потрібен поточний пароль для підтвердження змін)</i><br/>
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.password_field :current_password, class: 'form-control initiative-new-form-input', autocomplete: "off" %>
              </p>
            </div>
          </div>
          <div class="col-lg-offset-4 col-md-8 col-xs-12">
            <%= f.submit t('views.devise.registration.edit.update'), class: 'devise-registration-edit-button-submit' %>
          </div>
      <% end %>
      <br/>

      <div class="row">
        <div class="col-lg-4 col-md-4 col-xs-12">
          <p class="user-panel-show-names-user-information">
            <%= t('views.devise.registration.edit.cancel_my_account') %>
          </p>
        </div>
        <div class="col-lg-8 col-md-8 col-xs-12">
          <p class="user-panel-show-names-user-information">
            <%= button_to t('views.devise.registration.edit.delete_my_account'),
                          registration_path(resource_name),
                          class: 'devise-registration-edit-button-submit',
                          data: {confirm: 'Are you sure?'},
                          method: :delete %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>



