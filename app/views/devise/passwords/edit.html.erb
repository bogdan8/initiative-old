<div class="container">
  <div class="row">
    <div class="col-lg-offset-1 col-lg-11 col-xs-12">
      <div class="row">
        <div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4 col-xs-12">
          <p class="user-panel-show-title">
            Змінити пароль
          </p>
        </div>
      </div>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
          <%= devise_error_messages_alert! %>
          <%= f.hidden_field :reset_password_token %>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                Новий пароль*
                <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> символів мінімум)</em><br/>
                <% end %>
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.password_field :password, required: :required, autofocus: true, autocomplete: 'off', class: 'form-control initiative-new-form-input' %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <p class="user-panel-show-names-user-information">
                Повторити новий пароль8
              </p>
            </div>
            <div class="col-lg-8 col-md-8 col-xs-12">
              <p class="user-panel-show-names-user-information">
                <%= f.password_field :password_confirmation, required: :required, autocomplete: 'off', autofocus: true, class: 'form-control initiative-new-form-input' %>
              </p>
            </div>
          </div>
          <div class="col-lg-offset-4 col-md-8 col-xs-12">
            <%= f.submit 'Змінити пароль', class: 'devise-registration-edit-button-submit' %>
          </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>