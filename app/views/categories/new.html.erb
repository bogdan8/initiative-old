<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h2><%= t('views.category.new.title') %></h2>
      <%= form_for :category, url: '/categories', method: :post do |f| %>
          <div class="row">
            <div class="col-lg-4 col-md-4 col-xs-12">
              <%= f.label t('views.form.name'), class: 'initiative-new-form-names' %>
            </div>
            <div class="col-lg-7 col-md-7 col-xs-12">
              <%= f.text_field :name, required: :required, class: 'form-control initiative-new-form-input', placeholder: t('views.form.name') %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-offset-4 col-lg-8">
              <%= f.submit t('views.category.new.title'), class: 'initiative-button-submit' %>
              <%= spinner_css %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
